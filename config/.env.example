# Source Application Configuration (Freed.ai)
SOURCE_APP_URL=https://secure.getfreed.ai/
SOURCE_APP_USERNAME=your_freed_email@example.com
SOURCE_APP_PASSWORD=your_freed_password

# Target Application Configuration (Osmind EHR)
TARGET_APP_URL=https://app.osmind.com/login
TARGET_APP_USERNAME=your_osmind_username
TARGET_APP_PASSWORD=your_osmind_password

# Automation Schedule (cron format)
# Example: "0 */2 * * *" = Every 2 hours
SCHEDULE="0 */2 * * *"

# Browser Configuration
HEADLESS=true
BROWSER_TIMEOUT=30000
SCREENSHOT_ON_ERROR=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Data Transfer Settings
BATCH_SIZE=50
RETRY_ATTEMPTS=3
RETRY_DELAY=5

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000

# Data Processing
DAYS_TO_FETCH=1
DOWNLOAD_INDIVIDUAL_FILES=true
