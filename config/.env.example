# Source Application Configuration
SOURCE_APP_URL=https://source-app.example.com
SOURCE_APP_USERNAME=your_username
SOURCE_APP_PASSWORD=your_password

# Target Application Configuration
TARGET_APP_URL=https://target-app.example.com
TARGET_APP_USERNAME=your_username
TARGET_APP_PASSWORD=your_password

# Automation Schedule (cron format)
# Example: "0 */2 * * *" = Every 2 hours
SCHEDULE="0 */2 * * *"

# Browser Configuration
HEADLESS=true
BROWSER_TIMEOUT=30000
SCREENSHOT_ON_ERROR=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Data Transfer Settings
BATCH_SIZE=50
RETRY_ATTEMPTS=3
RETRY_DELAY=5
