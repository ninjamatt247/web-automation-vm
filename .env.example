# Database Configuration
DATABASE_URL=sqlite:///app/data/medical_notes.db

# Freed.ai Credentials
FREED_EMAIL=your-email@example.com
FREED_PASSWORD=your-password

# Osmind Credentials
OSMIND_EMAIL=your-email@example.com
OSMIND_PASSWORD=your-password

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3

# Microsoft Azure & OneDrive Configuration (for PDF upload)
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
ONEDRIVE_FOLDER_ID=your-onedrive-folder-id

# Application Configuration
TZ=America/New_York
PYTHONUNBUFFERED=1

# Frontend Configuration (for separate deployment)
NODE_ENV=production
NEXT_PUBLIC_API_URL=http://localhost:8000

# PDF Generation Configuration (optional)
PDF_OUTPUT_DIR=/app/data/pdf_output
PDF_TEMPLATE_DIR=/app/config/pdf_templates
PDF_FIELD_MAPPINGS_DIR=/app/config/field_mappings

# Scheduler Configuration (optional)
DAILY_PDF_SCHEDULE=01:00  # Run daily at 1 AM
WEEKLY_PDF_SCHEDULE=MON:02:00  # Run Monday at 2 AM

# Logging Configuration (optional)
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
